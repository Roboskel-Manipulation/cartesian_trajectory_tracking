<?xml version="1.0"?>
<launch>

	<arg name="sim" default="true"/>
	<arg name="gui" value="false"/>
	<arg name="case_piecewise" default="false"/>
	<arg name="case_downsampling" default="false"/>	
	<arg name="case_raw" default="false"/>
	<arg name="trajectory_file" default="/home/ttsitos/Desktop/yaml_files/fast_gpu/cloudy_day/raw_yaml/md_arrow_n.yaml"/>

	<group if="$(arg case_piecewise)">
		<node name="raw_read_node" type="raw_read.py" pkg="reactive_control" args="$(arg trajectory_file)" output="log" respawn="false">
		</node>
	
		 <node name="piecewise_bezier_constructor" type="reactive_piecewise_bezier.py" pkg="reactive_control" respawn="false" output="log">
		</node> 
		
		<include file="$(find trajectory_process_utils)/launch/trajectory_smoothing.launch">
		</include>
	</group>

	<group if="$(arg case_downsampling)">		
		<node name="raw_read_node" type="raw_read.py" pkg="reactive_control" args="$(arg trajectory_file)" output="log" respawn="false">
		</node>
		
		<node name="downsampling_interpolation_constructor" type="reactive_std_downsampling.py" pkg="reactive_control" respawn="false" output="screen">
		</node>
	</group>

	<group if="$(arg case_raw)">
		<node name="raw_input_node" type="raw.py" pkg="reactive_control" output="log" respawn="false" args="$(arg trajectory_file)">
		</node>
	</group>

	<include file="$(find reactive_control)/launch/reactive_control_launch.launch">
	</include>
	
<!-- 	<include file="$(find reactive_control)/launch/reactive_control_acc_launch.launch">
	</include> -->

	<group if="$(arg sim)">
		<include file="$(find manos_gazebo)/launch/manos_gazebo.launch">
			<arg name="cart_control" value="true"/>
			<arg name="gui" value="$(arg gui)"/>
		</include>
	</group>

</launch>
