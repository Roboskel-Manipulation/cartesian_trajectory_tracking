<?xml version="1.0"?>
<launch>
	<arg name="gazebo" default="false"/>

	<group if="$(arg gazebo)">
		<node name="reactive_control_node" type="reactive_control_double_integrator_sim" pkg="reactive_control" respawn="false" output="screen">
			<rosparam file="$(find reactive_control)/config/reactive_params_double_integrator.yaml"/>
		</node>
	</group>

	<group unless="$(arg gazebo)">
		<node name="reactive_control_node" type="reactive_control_double_integrator_realhw" pkg="reactive_control" respawn="false" output="screen">
			<rosparam file="$(find reactive_control)/config/reactive_params_double_integrator.yaml"/>
		</node>
	</group>

</launch>