<?xml version="1.0"?>
<launch>
	<arg name="sim" default="true"/>

	<group if="$(arg sim)">
		<node name="reactive_control_node" type="reactive_control_double_integrator_sim" pkg="reactive_control" respawn="false" output="log">
			<rosparam file="$(find reactive_control)/config/reactive_params_double_integrator.yaml"/>
		</node>
	</group>

	<group unless="$(arg sim)">
		<node name="reactive_control_node" type="reactive_control_double_integrator_realhw" pkg="reactive_control" respawn="false" output="log">
			<rosparam file="$(find reactive_control)/config/reactive_params_double_integrator.yaml"/>
		</node>
	</group>

</launch>