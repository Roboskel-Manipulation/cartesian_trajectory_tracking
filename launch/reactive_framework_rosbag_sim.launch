<?xml version="1.0"?>
<launch>

	<arg name="case_piecewise" default="false"/>
	<arg name="case_downsampling" default="false"/>
	<arg name="case_raw" default="false"/>
	<arg name="single_integrator" default="true"/>
	<arg name="trajectory_file" default="/home/ttsitos/Desktop/yaml_files/fast_gpu/cloudy_day/raw_yaml/md_arrow_n.yaml"/>
	<arg name="gui" default="false"/>


	<node name="yaml_read" type="yaml_read.py" pkg="reactive_control" respawn="false" output="log" args="$(arg trajectory_file)">
	</node>

	<group if="$(arg case_piecewise)">
		 <node name="piecewise_bezier_constructor" type="reactive_piecewise_bezier.py" pkg="reactive_control" respawn="false" output="screen">
		</node> 
		
		<include file="$(find trajectory_process_utils)/launch/trajectory_smoothing.launch">
		</include>
	</group>

	<group if="$(arg case_downsampling)">		
		<node name="downsampling_interpolation_constructor" type="reactive_std_downsampling.py" pkg="reactive_control" respawn="false" output="screen">
		</node>
	</group>

	<group if="$(arg case_raw)">
		<node name="raw_points_process" type="case_raw.py" pkg="reactive_control" respawn="false" output="screen">
		</node>
	</group>

	<group if="$(arg single_integrator)">
		<include file="$(find reactive_control)/launch/reactive_control_single_integrator.launch">
		</include>
	</group>

	<group unless="$(arg single_integrator)">
		<include file="$(find reactive_control)/launch/reactive_control_double_integrator.launch">
			<arg name="sim" default="true"/>
		</include>
	</group>

	<include file="$(find manos_gazebo)/launch/manos_gazebo.launch">
		<arg name="cart_control" value="true"/>
		<arg name="gui" value="$(arg gui)"/>
	</include>
</launch>
